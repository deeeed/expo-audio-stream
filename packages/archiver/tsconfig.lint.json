{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": false,
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/__tests__/**/*.ts", "src/__tests__/**/*.tsx"],
  "exclude": [
    "node_modules",
    "lib",
    "build",
    "prebuilt",
    "third_party",
    "**/__fixtures__",
    "**/__mocks__",
    "**/.*",
    "**/*.d.ts",
    "js-untar.d.ts",
    "**/*.ts.map",
    "ios/build",
    "android/build",
    "src/web/WebArchiver.ts",
    "example"
  ]
}
