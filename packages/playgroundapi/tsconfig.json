{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "declaration": true,
      "jsx": "react-jsx", 
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "@siteed/expo-audio-studio": [
            "../expo-audio-studio/src/index"
        ],
        "@siteed/expo-audio-studio/*": [
            "../expo-audio-studio/src/*"
        ],
        "@siteed/react-native-essentia": [
            "../react-native-essentia/src/index"
        ],
        "@siteed/react-native-essentia/*": [
            "../react-native-essentia/src/*"
        ]
      }
    },
    "include": ["src/**/*"]
  } 