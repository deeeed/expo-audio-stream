{
  "extends": "./tsconfig",
  "compilerOptions": {
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true,
  },
  "include": [
    "./src",
    "./*.js",
    "app.config.ts",
    ".eslintrc.cjs",
    "expo-env.d.ts",
    "./public/*.js"
  ],
  "exclude": [
    "dist/**",
    "node_modules"
  ]
}