{
  "extends": "./tsconfig",
  "compilerOptions": {
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true,
  },
  "include": [
    "./src",
    "./*.js",
    "./scripts",
    "./plugins",
    "app.config.ts",
    ".eslintrc.cjs",
    "./public/*.js"
  ],
  "exclude": ["dist/**", "node_modules"]
}
